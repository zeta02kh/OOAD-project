<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="bank.system.banksystem2.controller.AccountController">

    <top>
        <Label text="Account Operations Dashboard"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"
               padding="$10"/>
    </top>

    <center>
        <VBox spacing="15" padding="20">
            <Label text="Select Account:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="comboAccounts" prefWidth="400" />

            <Label fx:id="lblBalance" text="Balance: $0.00"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Amount:" />
                <TextField fx:id="txtAmount" promptText="Enter amount"
                           prefWidth="150"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Deposit" onAction="#handleDeposit"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Withdraw" onAction="#handleWithdraw"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                <Button text="Pay Interest" onAction="#handleInterest"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            </HBox>

            <VBox spacing="5">
                <Label text="Transaction Log:" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="txtLog" prefHeight="250" prefWidth="500"
                          editable="false" wrapText="true"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>